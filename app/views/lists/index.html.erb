<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://upload.wikimedia.org/wikipedia/commons/3/30/Cinemaaustralia.jpg);">
<div class="container">
  <h1>Save any kind of movies</h1>
  <%= link_to 'Create new List', new_list_path, class: 'btn btn-success mt-4' %>
</div>
</div>

<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class=" text-center mt-4 col-4" >
        <%= link_to list_path(list), class:"text-decoration-none text-light" do %>
          <div class="cards" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
