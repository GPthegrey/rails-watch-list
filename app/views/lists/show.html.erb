 <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <h1 class="text-white text-center"><%= @list.name %></h1>
  </div>
<div class="container">
  <div class="title d-flex justify-content-between my-3">
    <h5 class="card-title my-2 ">Movies: </h5>
    <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-success text-white ml-3 rounded" %>
  </div>
  <div class="row">
    <% @list.movies.each do |movie| %>
        <div class="card col-lg-4 col-md-6 mb-3">
          <div class="row ml-3">
            <div class="col-md-6">
              <%= image_tag movie.poster_url, alt: "Movie Poster", class: "img-fluid w-100" %>
            </div>
            <div class="col-md-6 bg-light card-body">
                <h6 class="font-weight-bold"><%= movie.title %></h6>
                <p>Rating: <%= movie.rating %><i class="fa-solid fa-star"></i></p>
                <br>
                <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
                <p><i class="fa-solid fa-bookmark"> </i><%= bookmark.comment %> <i class="fa-solid fa-delete-left"></i></p>
                <%= link_to "Delete Bookmark", bookmark_path(bookmark), class: "btn text-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <div class="links d-flex justify-content-between my-3">
    <%= link_to "Back to Lists", root_path, class: "btn btn-primary rounded" %>
    <%= link_to "Delete list", list_path(@list), class: "btn btn-danger text-white rounded", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
</div>
